{
  "name": "server",
  "version": "1.0.0",
  "engines": {
    "node": "14.5.0",
    "npm": "6.14.5"
  },
  "description": "Journey Travel App",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'journey/*'\" \"npm run journey\"",
    "client": "cd journey && npm run start",
    "install": "cd journey && npm install",
    "build": "cd journey && npm run build",
    "heroku-postbuild": "npm run build"

  },
  "keywords": [],
  "author": "Logan Hemphill, Nicole O'Bomsawin",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongoose": "^5.10.0"
  }
}
